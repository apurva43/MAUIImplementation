<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="MAUIApp.Views.ChartView"
             Title="ChartView">
     <ScrollView>
        <VerticalStackLayout Padding="10">
            <Label Text="% Solids"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center" />
            <charts:ChartView x:Name="SolidsChartView"
                            HeightRequest="300" />

            <Label Text="pH"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
            <charts:ChartView x:Name="PhChartView"
                            HeightRequest="300" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
